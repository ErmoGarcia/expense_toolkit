[Unit]
Description=Daily backup timer for Expense Toolkit database
Documentation=https://github.com/yourusername/expense_toolkit
Requires=expense-toolkit-backup.service

[Timer]
# Run daily at 3:00 AM
OnCalendar=daily
OnCalendar=*-*-* 03:00:00

# If system was off when timer should have run, run it when system starts
Persistent=true

# Randomize execution time by up to 15 minutes to avoid load spikes
RandomizedDelaySec=900

[Install]
WantedBy=timers.target
